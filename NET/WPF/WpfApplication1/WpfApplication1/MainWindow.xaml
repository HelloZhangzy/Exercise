<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Border Margin="5" Padding="10" Background="LightYellow" BorderBrush="SteelBlue" BorderThickness="10" CornerRadius="10" VerticalAlignment="Top">
        <StackPanel>
                <Border Margin="0" Padding="0" Background="LightYellow" BorderBrush="SteelBlue" BorderThickness="10" CornerRadius="10" VerticalAlignment="Top">
                    <Button Margin="00" >One</Button>
                </Border>
                <Button Margin="3" Background="LightYellow" BorderBrush="SteelBlue">Two</Button>
                <Button Margin="3">Three</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
